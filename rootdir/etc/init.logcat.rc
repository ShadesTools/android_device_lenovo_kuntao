#
# Take logs even when adb is not working.
# Thanks: markakash
#
# Usage: Copy this file to /vendor/etc/init/hw.
#        Add this line to your init.$(ro.hardware).rc file:
#        import /vendor/etc/init/hw/init.logcat.rc
#

on fs
    rm /cache/boot_lc_main.txt
    rm /cache/boot_dmesg.txt

    start boot_lc_main
    start boot_dmesg

service boot_lc_main /system/bin/logcat -b all -D -f /cache/boot_lc_main.txt
    class main
    user root
    group root system
    disabled
    oneshot

service boot_dmesg /system/bin/sh -c "dmesg -w > /cache/boot_dmesg.txt"
    class main
    user root
    group root system
    disabled
    oneshot

on boot
    rm /cache/boot_lc_main_k.txt
    rm /cache/boot_dmesg_k.txt

    start boot_lc_main_k
    start boot_dmesg_k

service boot_lc_main_k /system/bin/logcat -b all -D -f /cache/boot_lc_main_k.txt
    class main
    user root
    group root system
    disabled
    oneshot

service boot_dmesg_k /system/bin/sh -c "dmesg -w > /cache/boot_dmesg_k.txt"
    class main
    user root
    group root system
    disabled
    oneshot
